@*Razor Page to edit the calorie item*@

@page
@model CalorieWebApp.Pages.Calories.EditModel
@{
}
<br>
<h2>Edit Food Item</h2>

@if (@Model.ErrorMessage.Length > 0)
{
    <div>@Model.ErrorMessage</div>
}

<form method="POST">
    <input type="hidden" name="id" value="@Model.Calorie.Id" />
    <table>
        <tr>
            <td>Name</td>
            <td><input type="text" name="name" value="@Model.Calorie.Name"></td>
        </tr>
        <tr>
            <td>Quantity</td>
            <td><input type="text" name="quantity" value="@Model.Calorie.Quantity"></td>
        </tr>
        <tr>
            <td>Unit</td>
            <td><input type="text" name="unit" value="@Model.Calorie.Unit"></td>
        </tr>
        <tr>
            <td>Calories</td>
            <td><input type="text" name="calories" value="@Model.Calorie.Calories"></td>
        </tr>
    </table>
    <p></p>

    @if (Model.SuccessMessage.Length > 0)
    {
        <div>@Model.SuccessMessage</div>
    }

    <input type="submit" value="Edit" class="btn btn-primary" />
</form>

