@*@Razor Page to delete an item from the DB@*@

@page
@model CalorieWebApp.Pages.Calories.DeleteModel
@{
}

<br>
<h2>Edit Calories</h2>
@if (@Model.ErrorMessage.Length > 0)
{
    <div>@Model.ErrorMessage</div>
}

<form method="POST">
    <input type="hidden" name="id" value="@Model.Calorie.Id" />
    <table>
        <tr>
            <td>Name</td>
            <td><input type="text" name="name" value="@Model.Calorie.Name"></td>
        </tr>
        <tr>
            <td>Quantity</td>
            <td><input type="text" name="quantity" value="@Model.Calorie.Quantity"></td>
        </tr>
        <tr>
            <td>Unit</td>
            <td><input type="text" name="unit" value="@Model.Calorie.Unit"></td>
        </tr>
        <tr>
            <td>Calories</td>
            <td><input type="text" name="calories" value="@Model.Calorie.Calories"></td>
        </tr>
    </table>
    <p></p>
   
    <input type="submit" value="Save" class="btn btn-primary" />
</form>